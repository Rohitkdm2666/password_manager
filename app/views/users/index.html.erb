<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #f8f9fa, #eef2f7);
      font-family: 'Segoe UI', Roboto, sans-serif;
      color: #333;
    }

    .dashboard-header {
      background: #fff;
      padding: 20px 25px;
      border-radius: 15px;
      box-shadow: 0 5px 12px rgba(0,0,0,0.05);
      margin-bottom: 30px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    h1 {
      font-weight: 700;
      color: #0d6efd;
      margin: 0;
    }

    .search-bar {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .search-bar input {
      border-radius: 10px;
      padding: 8px 15px;
      border: 1px solid #ddd;
      width: 250px;
    }

    .search-bar select {
      border-radius: 10px;
      padding: 8px 12px;
    }

    .table-card {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 5px 12px rgba(0,0,0,0.08);
    }

    .table {
      margin-bottom: 0;
      border-radius: 12px;
      overflow: hidden;
    }

    thead {
      background: #0d6efd;
      color: #fff;
    }

    thead th {
      text-align: center;
      font-size: 15px;
      letter-spacing: 0.5px;
    }

    tbody td, tbody th {
      vertical-align: middle;
      text-align: center;
    }

    tbody tr:hover {
      background: #f1f5ff !important;
      transition: background 0.2s ease;
    }

    .badge-email {
      font-size: 0.85rem;
      padding: 6px 10px;
      border-radius: 8px;
      background: #eaf1ff;
      color: #0d6efd;
      font-weight: 500;
    }

    .btn {
      border-radius: 8px;
      font-weight: 500;
      padding: 6px 12px;
    }

    .btn-outline-primary {
      border-width: 2px;
    }

    .btn-outline-primary:hover {
      background: #0d6efd;
      color: #fff;
    }

    .btn-danger {
      background: #dc3545;
      border: none;
      transition: 0.2s ease;
    }

    .btn-danger:hover {
      background: #b52d39;
    }

    .btn-success {
      font-size: 15px;
      padding: 10px 20px;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.12);
    }

    .action-btns {
      display: flex;
      gap: 12px;
      justify-content: center;
    }
  </style>
</head>
<body>
  <div class="container mt-5">

    <!-- Dashboard Header -->
    <div class="dashboard-header">
      <h1>ðŸ‘¥ User Dashboard</h1>
      <div class="search-bar">
        <input type="text" id="searchInput" placeholder="ðŸ” Search users...">
        <select id="filterSelect">
          <option value="">Filter by</option>
          <option value="first">First Name</option>
          <option value="last">Last Name</option>
          <option value="email">Email</option>
        </select>
        <%= link_to 'âž• New User', users_new_path, class: "btn btn-success" %>
      </div>
    </div>

    <!-- Users Table -->
    <div class="table-card">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="userTable">
          <% @users.each_with_index do |user, index| %>
            <tr>
              <th><%= index + 1 %></th>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><span class="badge-email"><%= user.email %></span></td>
              <td class="action-btns">
                <%= link_to 'ðŸ”‘ Check', users_login_path(id: user.id), class: "btn btn-sm btn-outline-primary" %>
                <%= button_to 'ðŸ—‘ Delete', users_destroy_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Simple Search Filter -->
  <script>
    const searchInput = document.getElementById("searchInput");
    const filterSelect = document.getElementById("filterSelect");
    const rows = document.querySelectorAll("#userTable tr");

    searchInput.addEventListener("keyup", () => {
      let filter = searchInput.value.toLowerCase();
      let filterType = filterSelect.value;

      rows.forEach(row => {
        let first = row.cells[1].textContent.toLowerCase();
        let last = row.cells[2].textContent.toLowerCase();
        let email = row.cells[3].textContent.toLowerCase();

        let show = false;
        if (filterType === "first") show = first.includes(filter);
        else if (filterType === "last") show = last.includes(filter);
        else if (filterType === "email") show = email.includes(filter);
        else show = first.includes(filter) || last.includes(filter) || email.includes(filter);

        row.style.display = show ? "" : "none";
      });
    });
  </script>
</body>
</html>
